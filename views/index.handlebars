<img src="../public/assets/img/burger.jpeg">

<h1>Mmmm burgers...</h1>

<ul>
    {{#each burgers}} {{#unless devoured}}
    <li>
        <p>{{id}}. {{burger_name}}</p>
        <button data-id="{{id}}" class="devourbtn">Devour it!</button>
    </li>
    {{/unless}} {{/each}}
</ul>

<ul>
    {{#each burgers}} {{#if devoured}}
    <li>
        {{burger_name}}
    </li>
    {{/if}} {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="burgername">Enter a new burger here:</label>
        <input type="text" id="burgername" name="name">
    </div>

    <button type="submit">Submit</button>
</form>