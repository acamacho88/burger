<img src="../assets/img/burger.jpeg">

<h1>Mmmm burgers...</h1>

<ul id="available">
    {{#each burgers}} {{#unless devoured}}
    <li class="readyburger">
        <p>{{id}}. {{burger_name}}</p>
        <button data-id="{{id}}" class="devourbtn">Devour it!</button>
    </li>
    {{/unless}} {{/each}}
</ul>

<ul id="devoured">
    {{#each burgers}} {{#if devoured}}
    <li class="devouredburger">
        <input type="text" data-id="{{id}}" class="updatefield" placeholder="{{id}}. {{burger_name}}">
    </li>
    {{/if}} {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="burgername">Enter a new burger here:</label>
        <input type="text" id="burgername" name="name">
    </div>

    <button type="submit">Submit</button>
</form>